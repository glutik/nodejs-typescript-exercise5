{
  "name": "exercise",
  "version": "1.0.0",
  "description": "Exercise 2",
  "main": "index.js",
  "scripts": {
    "build:run": "tsc",
    "build:clean": "rm -rf ./dist",
    "copy-files:views": "cpx \"src/views/**/*.*\" dist/views",
    "copy-files:static": "cpx \"src/static/**/*.*\" dist/public",
    "copy-files": "npm run copy-files:static && npm run copy-files:views",
    "clean-and-copy": "npm run build:clean && npm run copy-files",
    "build": "npm run clean-and-copy && npm run build:run",
    "serve": "node dist/index.js",
    "start": "npm run build && npm run serve",
    "watch:ts": "npm run clean-and-copy && \"./node_modules/.bin/tsc\" -w",
    "watch:js": "./node_modules/.bin/nodemon dist/index.js",
    "watch:files": "./node_modules/.bin/concurrently --kill-others \"npm:copy-files:views -- --watch\" \"npm:copy-files:static -- --watch\"",
    "watch:tsjs": "./node_modules/.bin/tsc-watch --onSuccess \"npm run watch:js\"",
    "watch": "npm run clean-and-copy && concurrently --kill-others \"npm:watch:tsjs\" \"npm:watch:files\"",
    "lint:ts": "./node_modules/.bin/tslint --project . --format codeFrame",
    "lint:ts:fix": "npm -s run lint:ts -- --fix"
  },
  "author": "K.A.G.",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-handlebars": "0.0.32",
    "@types/express-winston": "^3.0.3",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.6.2",
    "@types/passport": "^1.0.0",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.2",
    "@types/request-promise": "^4.1.44",
    "@types/uuid": "^3.4.5",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.1",
    "cpx": "^1.5.0",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "express-winston": "^3.2.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  }
}
